<body>
    <div class="container">
        <div class="left"></div>
        <div class="right">
            <div class="logo"></div>
            <h2>LOGIN</h2>
            <input type="text" id="nis" placeholder="NIS">
            <input type="password" id="password" placeholder="Password">
            <button onclick="login()">LOGIN</button>
        </div>
    </div>

    <script>
        const validAccounts = [
            { nis: "10001", password: "pass1" },
            { nis: "10002", password: "pass2" },
            { nis: "10003", password: "pass3" },
            { nis: "10004", password: "pass4" },
            { nis: "10005", password: "pass5" },
            { nis: "10006", password: "pass6" },
            { nis: "10007", password: "pass7" },
            { nis: "10008", password: "pass8" },
            { nis: "10009", password: "pass9" },
            { nis: "10010", password: "pass10" }
        ];

        function login() {
            const nis = document.getElementById("nis").value;
            const password = document.getElementById("password").value;

            const user = validAccounts.find(account => account.nis === nis && account.password === password);
            
            if (user) {
                window.location.href = "dashboard.html"; // Ganti dengan halaman tujuan setelah login sukses
            } else {
                alert("NIS atau Password salah!");
            }
        }
    </script>
